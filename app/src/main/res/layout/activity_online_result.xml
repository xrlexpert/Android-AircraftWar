<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.OnlineResultActivity">

    <TextView
        android:id="@+id/online_me"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="我的分数:"
        android:gravity="center"
        android:textSize="20sp"
        android:paddingEnd="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/online_myscore"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="test"
        android:gravity="left"
        android:textSize="20sp"
        android:paddingEnd="8dp"
        app:layout_constraintLeft_toRightOf="@+id/online_me"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/online_op"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:text="对手分数:"
        android:gravity="center"
        android:textSize="20sp"
        android:paddingEnd="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/online_me"
        />
    <TextView
        android:id="@+id/online_opscore"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:text="test"
        android:gravity="left"
        android:textSize="20sp"
        android:paddingEnd="8dp"
        app:layout_constraintLeft_toRightOf="@+id/online_op"
        app:layout_constraintTop_toTopOf="@+id/online_myscore"/>

    <Button
        android:id="@+id/online_backHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回主界面"
        android:textSize="20sp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>